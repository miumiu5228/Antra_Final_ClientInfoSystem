@model ApplicationCore.Models.EmployeeUpdateModel


<h1>@Model.Name 's Info Update</h1>

@Model.Name

<div class="row">

    <div class="col-md-4">
        <form asp-action="Update">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
              
                <input name="Id" type="hidden" asp-for="Id" class="form-control" >
               
            </div>

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input name="Name" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input name="Password" asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Designation">Designation</label>
                <input name="Designation" asp-for="Designation" class="form-control">
                <span asp-validation-for="Designation" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </div>
</div>
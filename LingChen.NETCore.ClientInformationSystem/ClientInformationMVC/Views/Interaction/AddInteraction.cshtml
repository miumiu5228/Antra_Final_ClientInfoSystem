@model ApplicationCore.Models.InteractionResponseModel


<h1>Create Interaction</h1>

<div class="row">

    <div class="col-md-4">
        <form asp-action="AddInteraction">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Employee Name</label>

                <select class="form-control" id="exampleFormControlSelect1" asp-for="EmpId">
                    @foreach (var e in Model.Employees)
                    {
                        <option value="@e.Id">@e.Name</option>

                    }
                </select>

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Client Name</label>

                <select class="form-control" id="exampleFormControlSelect1" asp-for="ClientId">
                    @foreach (var c in Model.Clients)
                    {

                        <option value="@c.Id" >@c.Name</option>
                    }
                </select>

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">IntType</label>

                <select class="form-control" id="exampleFormControlSelect1" asp-for="IntType">

                    <option  value="@Convert.ToChar("T")">T</option>
                    <option  value="@Convert.ToChar("S")">S</option>
                    <option  value="@Convert.ToChar("I")">I</option>
                    <option  value="@Convert.ToChar("W")">W</option>
                  
                </select>

            </div>


            @*<div class="form-group">
                <label asp-for="IntType">IntType</label>
                <input asp-for="IntType" class="form-control" typeof="">
                <span asp-validation-for="IntType" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="IntDate">IntDate</label>
                <input asp-for="IntDate" type="datetime-local" class="form-control">
                <span asp-validation-for="IntDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks">Remarks</label>
                <input asp-for="Remarks" class="form-control">
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
</div>
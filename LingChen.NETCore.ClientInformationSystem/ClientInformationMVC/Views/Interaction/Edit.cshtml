@model ApplicationCore.Models.InteractionResponseModel

<h1>Interaction Info Update!!!!</h1>


<div class="row">

    <div class="col-md-4">
        <form asp-action="Update">

            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">

                <input name="Id" type="hidden" asp-for="Id" class="form-control">

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Employee Name</label>

                <select class="form-control" hidden asp-for="EmpId">

                    <option value="@Model.EmpId"></option>

                </select>
                <select class="form-control" disabled>

                    <option value="@Model.EmpId">@Model.EmployeeName</option>

                </select>

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Client Name</label>

                <select class="form-control" hidden asp-for="ClientId">

                    <option value="@Model.ClientId"></option>

                </select>
                <select class="form-control" disabled>

                    <option value="@Model.ClientId">@Model.ClientName</option>

                </select>

            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">IntType</label>

                <select class="form-control" id="exampleFormControlSelect1" asp-for="IntType">

                    <option value="@Convert.ToChar("T")">Telephone</option>
                    <option value="@Convert.ToChar("S")">Skype</option>
                    <option value="@Convert.ToChar("I")">In person</option>
                    <option value="@Convert.ToChar("W")">WebEx</option>

                </select>

            </div>


